<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bodytemperature" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/status_bar</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar </item>
        <!-- Customize your theme here. -->
    </style>

    <!--몸무게 다이얼로그 피커 색상-->
    <style name="WeightPickerDialog">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
    </style>

    <!-- MaterialCalendar에 필요한 색상 -->
    <style name="DatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- 색상 변환 -->
        <item name="colorPrimary">@color/status_bar</item>
        <item name="colorPrimaryDark">@color/status_bar</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar </item>
        <!-- Customize your theme here. -->
        <!-- 직접 입력 버튼 숨김 -->
        <item name="materialCalendarHeaderToggleButton">@style/CalendarToggleButton</item>
    </style>

    <style name="CalendarToggleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:visibility">gone</item>
    </style>
</resources>